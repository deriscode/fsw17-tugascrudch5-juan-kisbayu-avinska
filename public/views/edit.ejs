<!DOCTYPE html>
<html lang="en">
	<%- include('partial/head') %>
	<body>
		<!-- Start Navbar -->
		<%- include('partial/navbar') %>
		<!-- End Navbar -->

		<!-- Start Main -->
		<section class="main text-center">
			<div class="container-fluid">
				<h1 class="m-3 user__main-title"><%= bodyTitle %></h1>
				<main class="form-signin">
					<form action="/user/<%= user.id %>?_method=PUT" method="POST">
						<div class="form-floating">
							<input type="text" class="form-control" id="name" name="name" placeholder="Name" value="<%=user.name%>" />
							<label for="floatingInput">Name</label>
						</div>
						<div class="form-floating">
							<input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" value="<%=user.email%>" />
							<label for="floatingInput">Email address</label>
						</div>
						<div class="form-floating">
							<input type="password" class="form-control" id="password" name="password" placeholder="Password" value="" />
							<label for="floatingPassword">Password</label>
						</div>
						<div class="button-group">
							<button class="btn btn-submit ms-4 mb-2 mt-2 text-center">Submit</button>
						</div>
					</form>
					<a href="/user"><button class="btn btn-back mb-2 mt-2 text-center">Back</button></a>
				</main>
			</div>
		</section>
		<!-- End Main -->

		<%- include('partial/footer') %>
	</body>
</html>
